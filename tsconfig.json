{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "outDir": "build",
    "target": "es6",
    "lib": ["es6"],
    "types": ["node"]
  },
  "include": ["./bin/*.ts"]
}
